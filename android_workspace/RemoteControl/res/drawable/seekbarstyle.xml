<?xml version="1.0" encoding="utf-8" ?> 

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="25dip" />
        <gradient
                android:startColor="#C0C0C0"
                android:centerColor="#F8F8FF"
                android:centerY="0.75"
                android:endColor="#ffffff"
                android:angle="90"
        />
        <stroke
	        android:width="1dp"
	        android:color="#243d54"
  		/>
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="25dip" />
            <gradient
                    android:startColor="#5d7991"
                    android:endColor="#b9d3eb"
                    android:angle="90"
            />
        <stroke
	        android:width="1dp"
	        android:color="#243d54"
  		/>
        </shape>
    </clip>
</item>

<item
    android:id="@android:id/progress">
    <clip>
        <shape>
            <corners android:radius="25dip" />
           <gradient
                android:startColor="#29445e"
                android:endColor="#8fb1d0"
                android:angle="90"
        />
        <stroke
	        android:width="1dp"
	        android:color="#243d54"
  		/>
        </shape>
    </clip>
</item>

</layer-list>